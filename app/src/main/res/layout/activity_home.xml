<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="blackbaud.advocacymobileapp.HomeActivity">

    <ImageButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@android:color/transparent"
        android:id="@+id/imageButton1"
        android:src="@drawable/door_adjar_bg"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="67dp" />

    <ImageButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@android:color/transparent"
        android:id="@+id/imageButton2"
        android:src="@drawable/prospect_addresses"
        android:adjustViewBounds="true"
        android:cropToPadding="false"
        android:scaleType="fitCenter"
        android:paddingLeft="50dp"
        android:paddingRight="50dp"
        android:onClick = "onProsAddressClicked"
        android:layout_marginTop="92dp"
        android:layout_below="@+id/imageButton1"
        android:layout_alignParentStart="true" />

    <ImageButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@android:color/transparent"
        android:id="@+id/imageButton3"
        android:src="@drawable/view_constituets"
        android:adjustViewBounds="true"
        android:scaleType="fitCenter"
        android:paddingLeft="50dp"
        android:paddingRight="50dp"
        android:onClick = "onViewConstituentsClicked"
        android:layout_marginTop="17dp"
        android:layout_below="@+id/imageButton2"
        android:layout_alignParentStart="true" />

    <ImageButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@android:color/transparent"
        android:id="@+id/imageButton4"
        android:src="@drawable/door_no_bg"
        android:layout_alignTop="@+id/imageButton1"
        android:layout_alignStart="@+id/imageButton1"
        android:visibility="invisible"/>
</RelativeLayout>
